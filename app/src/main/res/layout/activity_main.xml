<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.intjltd.shottrainer.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Space
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/button_spacer" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnStart"
                android:id="@+id/btnStart"
                android:layout_toStartOf="@id/button_spacer" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnStop"
                android:id="@+id/btnStop"
                android:layout_toEndOf="@id/button_spacer" />
        </RelativeLayout>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/txtLogger"
            android:textIsSelectable="true"
            android:enabled="true"
            android:longClickable="true"
            android:gravity="top"
            android:fontFamily="Courier New"
            android:scrollbars="vertical"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/lblOrientation"
                android:id="@+id/lblOrientation"
                android:layout_gravity="right"
                android:layout_marginTop="5dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/txtOrientation"
                android:layout_below="@+id/lblOrientation"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:lines="4"
                android:textSize="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/lblAccelerometer"
                android:id="@+id/lblAccelerometer"
                android:layout_gravity="right"
                android:layout_below="@+id/txtOrientation"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/txtAccelerometer"
                android:layout_below="@+id/lblAccelerometer"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:lines="3"
                android:textSize="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/lblGyroscope"
                android:id="@+id/lblGyroscope"
                android:layout_gravity="right"
                android:layout_below="@+id/txtAccelerometer"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/txtGyroscope"
                android:layout_below="@+id/lblGyroscope"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:lines="3"
                android:textSize="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/lblRssi"
                android:id="@+id/lblRssi"
                android:layout_gravity="right"
                android:layout_below="@+id/txtGyroscope"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtRssi"
                android:typeface="monospace"
                android:layout_below="@+id/lblRssi"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="11dp" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
